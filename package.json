{
  "name": "thumbgen-ts",
  "version": "1.0.0",
  "description": "A TypeScript-based Node.js API for generating and caching image thumbnails using Express and Sharp",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jasmine --config=jasmine.json",
    "test:watch": "jasmine --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "clean": "rmdir /s /q dist 2>nul || rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "typescript",
    "express",
    "image",
    "thumbnail",
    "sharp",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jasmine": "^4.3.5",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jasmine": "^5.1.0",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
